<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:orientation="vertical"
        tools:context=".view.ScrCalculator">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical"
            android:padding="30dp">

            <TextView
                android:id="@+id/input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="end"
                android:maxLines="3"
                android:textColor="@color/text_main"
                android:textSize="30sp"
                tools:text="5+10-3" />

            <TextView
                android:id="@+id/output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="end"
                android:maxLines="2"
                android:textColor="@color/green"
                android:textSize="50sp"
                tools:text="12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:weightSum="4">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_clear"
                style="@style/Button_Style"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/calculator_buttoon_height"
                android:layout_marginEnd="@dimen/cal_btm_left"
                android:fontFamily="sans-serif-medium"
                android:text="C"
                android:textColor="@color/red" />




            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_croxx"
                style="@style/Button_Style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/calculator_buttoon_height"
                android:layout_weight="1.5"
                android:fontFamily="sans-serif-medium"
                android:text="AC" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_division"
                style="@style/Button_Style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/calculator_buttoon_height"
                android:layout_marginStart="@dimen/cal_btn_start"
                android:layout_weight="1.5"
                android:fontFamily="sans-serif-medium"
                android:text="รท"
                android:textColor="@color/green" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:weightSum="4">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_7"
                style="@style/Button_Style"

                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/calculator_buttoon_height"
                android:fontFamily="sans-serif-medium"
                android:text="7" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_8"
                style="@style/Button_Style"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/calculator_buttoon_height"
                android:fontFamily="sans-serif-medium"
                android:text="8" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_9"
                style="@style/Button_Style"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/calculator_buttoon_height"
                android:fontFamily="sans-serif-medium"
                android:text="9" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_multiply"
                style="@style/Button_Style"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/calculator_buttoon_height"
                android:fontFamily="sans-serif-medium"
                android:text="ร"
                android:textColor="@color/green" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:weightSum="4">



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_4"
                style="@style/Button_Style"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/calculator_buttoon_height"
                android:fontFamily="sans-serif-medium"
                android:text="4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_5"
                style="@style/Button_Style"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="@dimen/calculator_buttoon_height"
                android:fontFamily="sans-serif-medium"
                android:text="5" />



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_6"
                style="@style/Button_Style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/calculator_buttoon_height"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="6" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_subtraction"
                style="@style/Button_Style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/calculator_buttoon_height"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="-"
                android:textColor="@color/green" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:weightSum="4">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_1"
                style="@style/Button_Style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/calculator_buttoon_height"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_2"
                style="@style/Button_Style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/calculator_buttoon_height"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_3"
                style="@style/Button_Style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/calculator_buttoon_height"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="3" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_addition"
                style="@style/Button_Style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/calculator_buttoon_height"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="+"
                android:textColor="@color/green" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:weightSum="4">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_0"
                style="@style/Button_Style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/calculator_buttoon_height"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="0" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_dot"
                style="@style/Button_Style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/calculator_buttoon_height"
                android:layout_weight="1.5"
                android:fontFamily="sans-serif-medium"
                android:text="." />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_equals"
                style="@style/Button_Style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/calculator_buttoon_height"
                android:layout_weight="1.5"

                android:fontFamily="sans-serif-medium"
                android:text="="
                android:textColor="@color/green" />

        </LinearLayout>


    </LinearLayout>

</layout>