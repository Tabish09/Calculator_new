<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/almostBlack"
        android:orientation="vertical"
        tools:context=".view.ScrCalculator"
        tools:ignore="HardcodedText">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:padding="10dp">


            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/workingsTV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.035" />

            <LinearLayout
                android:id="@+id/workingsTV"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                app:layout_constraintBottom_toTopOf="@id/resultsTV"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.82">


                <LinearLayout
                    android:id="@+id/ll_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="7dp"
                    tools:layout_editor_absoluteY="48dp">

                    <TextView
                        android:id="@+id/tv_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:maxLines="1"
                        android:text="km"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"
                        android:textSize="25sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_baseline_arrow_drop_down_24" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|end"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="7dp"
                    tools:layout_editor_absoluteY="48dp">

                    <TextView
                        android:id="@+id/tv_from_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:lines="1"
                        android:maxLines="1"
                        android:text="0"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/tv_from_result_fullform"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:maxLines="1"
                        android:text="Kilometer"
                        android:textAlignment="textEnd"
                        android:textColor="@color/red"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/resultsTV"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" >

                <LinearLayout
                    android:id="@+id/ll_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="7dp"
                    tools:layout_editor_absoluteY="48dp">

                    <TextView
                        android:id="@+id/tv_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:maxLines="1"
                        android:text="m"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"
                        android:textSize="25sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_baseline_arrow_drop_down_24" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|end"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="7dp"
                    tools:layout_editor_absoluteY="48dp">

                    <TextView
                        android:id="@+id/tv_to_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:maxLines="1"
                        android:text="0"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/tv_to_result_fullform"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:maxLines="1"
                        android:text="Meter"
                        android:textAlignment="textEnd"
                        android:textColor="@color/red"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout style="@style/buttonRow">

        <Button
            android:id="@+id/bt_clear_all"
            style="@style/buttonNumber2"
            android:background="@color/red"
            android:text="AC" />

        <Button
            android:id="@+id/bt_clear"
            style="@style/buttonNumber2"
            android:background="@color/orange"
            android:text="âŒ«" />

    </LinearLayout>

            <LinearLayout style="@style/buttonRow">

                <Button
                    android:id="@+id/bt_7"
                    style="@style/buttonNumber2"
                    android:text="7" />

                <Button
                    android:id="@+id/bt_8"
                    style="@style/buttonNumber2"
                    android:text="8" />

                <Button
                    android:id="@+id/bt_9"
                    style="@style/buttonNumber2"
                    android:text="9" />

            </LinearLayout>

            <LinearLayout style="@style/buttonRow">

                <Button
                    android:id="@+id/bt_4"
                    style="@style/buttonNumber2"
                    android:text="4" />

                <Button
                    android:id="@+id/bt_5"
                    style="@style/buttonNumber2"
                    android:text="5" />

                <Button
                    android:id="@+id/bt_6"
                    style="@style/buttonNumber2"
                    android:text="6" />


            </LinearLayout>

            <LinearLayout style="@style/buttonRow">

                <Button  android:id="@+id/bt_1"
                    style="@style/buttonNumber2"
                    android:text="1" />

                <Button
                    android:id="@+id/bt_2"
                    style="@style/buttonNumber2"
                    android:text="2" />

                <Button
                    android:id="@+id/bt_3"
                    style="@style/buttonNumber2"
                    android:text="3" />


            </LinearLayout>

            <LinearLayout style="@style/buttonRow">

                <Button
                    style="@style/buttonNumber2"
                    android:text="" />

                <Button
                    android:id="@+id/bt_0"
                    style="@style/buttonNumber2"
                    android:text="0" />

                <Button
                    android:id="@+id/bt_dot"
                    style="@style/buttonNumber2"
                    android:text="." />

            </LinearLayout>


    </LinearLayout>

    </ScrollView>

</layout>